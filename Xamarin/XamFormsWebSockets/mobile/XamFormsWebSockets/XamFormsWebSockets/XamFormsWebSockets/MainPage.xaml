<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamFormsWebSockets"
             x:Class="XamFormsWebSockets.MainPage">

  
  <StackLayout Padding="0,15,0,0">
    <Label Text="Data:" FontSize="18" FontAttributes="Bold"></Label>
    <StackLayout x:Name="ReceivedData" Padding="5,25" ></StackLayout>
    
    
     <Label Text="Message:" FontSize="18" FontAttributes="Bold"></Label>
    <Entry x:Name="Message"></Entry>
    <Button x:Name="BtnSend" Text="Send" Clicked="BtnSend_OnClicked"></Button>
  </StackLayout>


</ContentPage>